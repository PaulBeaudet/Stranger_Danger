extends ./header.jade

block content
    include navbar.jade
    // login form
    #signup.jumbotron
        h1 Login
        form(method='post')
            input(type='hidden', name="_csrf", value=csrfToken)
            .form-group
                label(for='signupEmail')  Email Address
                input.form-control(type='email', name='email', required='true')
            .form-group
                label(for='signupPassword')  Password
                input.form-control(type='password', name='password', required='true')
            input#submit.btn.btn-lg.btn-success(type='submit', value='submit')
    // footer
    include betaWarning.jade
    include copyright.jade
// scripts
include bootstrap.jade
