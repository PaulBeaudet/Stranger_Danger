doctype html
// Copyright 2015 Paul Beaudet
html
head
    meta(name='format-detection', content='telephone=no')
    meta(name='msapplication-tap-highlight', content='no')
    meta(name='viewport', content='user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width')
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='css/index.css')
    title Stangers!

  body#app
    // toolbar items (logo, up dir, current dir, down dir, settings)
    .row
      .col-xs-12.text-center
        h3#info.text-center
    // chat Ice Breaker list
    .row
      .col-xs-12
        table.table.table-hover.table-striped
          tr
            th
              span#dialog0
              button#button0.btn.btn-success.btn-lg.pull-right
                span#timer0.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
          tr
            th
              span#dialog1
              button#button1.btn.btn-success.btn-lg.pull-right
                span#timer1.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
          tr
            th
              span#dialog2
              button#button2.btn.btn-success.btn-lg.pull-right
                span#timer2.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
          tr
            th
              span#dialog3
              button#button3.btn.btn-success.btn-lg.pull-right
                span#timer3.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
          tr
            th
              span#dialog4
              button#button4.btn.btn-success.btn-lg.pull-right
                span#timer4.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
          tr
            th
              span#dialog5
              button#button5.btn.btn-success.btn-lg.pull-right
                span#timer5.text-danger
                span.glyphicon.glyphicon-comment(aria-hidden='true')
    // chat bar
    .navbar.navbar-inverse.navbar-fixed-bottom(role='navigation')
      .navbar-text.pull.left
        .form-group
          .col-xs-12.input-group.input-group-lg
            input#textEntry.form-control(type='text')
            span#sendButton.input-group-btn
              button.btn.btn-info.btn-lg.pull-right(type='button')
                span#sendText
                span#timer6
                span.glyphicon.glyphicon-hand-right(aria-hidden='true')
    // end chat footer
    // Javescript dependencies
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='bower_components/socket.io-1.3.5/index.js')
    script(src="bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(type='text/javascript', src='js/index.js')
