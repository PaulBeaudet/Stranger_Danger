extends ./header.jade

block content
    include navbar.jade
    // sign up form
    #signup.jumbotron
        h1 Turn strangers into friends!
        h3 Well, thats the idea, have fun at least. Sign-up and login
        form(method='post')
            input(type='hidden', name="_csrf", value=csrfToken)
            .form-group
                label(for='signupEmail')  Email Address
                input#signupEmail.form-control(type='email', name="email")
            .form-group
                label(for='signupPassword')  Password
                input#signupPassword.form-control(type='password', name="password")
            input#submit.btn.btn-lg.btn-success(type='submit', value='submit')
    include betaWarning.jade
    include copyright.jade
include bootstrap.jade
