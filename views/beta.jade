extends ./header.jade

block content
    .container
      // sign up form
      #signup.jumbotron
        h1 Turn strangers into friends!
        h3 Sign up for OurService!
        form(method='post')
          input(type='hidden', name="_csrf", value=csrfToken)
          .form-group
            label(for='signupEmail')  Email Address
            input#signupEmail.form-control(type='email', name="email")
          .form-group
            label(for='signupPassword')  Password
            input#signupPassword.form-control(type='password', name="password")
          input#submit.btn.btn-lg.btn-success(type='submit', value='submit')
      // footer
      footer.footer
        p &copy; OurService 2015 ~ Make all the things!
    // Javescript dependencies
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
